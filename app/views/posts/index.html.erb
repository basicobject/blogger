<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <%= link_to post.title, post %> | Likes: <%= post.like_count %> | Dislikes: <%= post.dislike_count %> | <%= post.is_published ? "Published" : "Unpublished" %>
      <small>(<%= post.comments_count %>)</small>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
